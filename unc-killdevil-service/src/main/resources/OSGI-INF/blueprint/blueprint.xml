<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">

  <cm:property-placeholder persistent-id="org.renci.gate.service.killdevil" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="submitHost" value="killdevil.its.unc.edu" />
      <cm:property name="collectorHost" value="biodev1.its.unc.edu" />
      <cm:property name="activeQueues" value="week" />
      <cm:property name="username" value="" />
      <cm:property name="maxPending" value="4" />
      <cm:property name="maxRunning" value="20" />
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="weekQueue" class="org.renci.jlrm.Queue">
    <property name="name" value="week" />
    <property name="weight" value="0.6" />
    <property name="maxPending" value="${maxPending}" />
    <property name="maxRunning" value="${maxRunning}" />
    <property name="runTime" value="5760" />
    <property name="numberOfProcessors" value="12" />
  </bean>

  <bean id="site" class="org.renci.jlrm.Site">
    <property name="name" value="KillDevil" />
    <property name="project" value="TCGA" />
    <property name="username" value="${username}" />
    <property name="submitHost" value="${submitHost}" />
    <property name="queueList">
      <list>
        <ref component-id="weekQueue" />
      </list>
    </property>
  </bean>

  <bean id="killDevilGATEService" class="org.renci.gate.service.killdevil.KillDevilGATEService">
    <property name="site" ref="site" />
    <property name="collectorHost" value="${collectorHost}" />
    <property name="activeQueues" value="${activeQueues}" />
    <cm:managed-properties persistent-id="org.renci.gate.service.killdevil" update-strategy="container-managed" />
  </bean>

  <service ref="killDevilGATEService" interface="org.renci.gate.GATEService" />

</blueprint>
